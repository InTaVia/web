{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "@stefanprobst/tsconfig",
	"compilerOptions": {
		"baseUrl": ".",
		"exactOptionalPropertyTypes": false,
		"paths": {
			"@/*": ["./src/*"],
			"~/*": ["./*"]
		}
	},
	"include": [
		"./next-env.d.ts",
		"./app.d.ts",
		"./**/*.ts",
		"./**/*.tsx",
		"./**/*.config.mjs",
		"./**/*.config.cjs"
	],
	"exclude": ["node_modules"]
}
