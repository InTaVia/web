{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "validate": "npm run lint"
  },
  "dependencies": {
    "@emotion/react": "^11.8.1",
    "@emotion/styled": "^11.8.1",
    "@mui/icons-material": "^5.5.0",
    "@mui/material": "^5.5.0",
    "@reduxjs/toolkit": "^1.8.0",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "next": "^12.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6"
  },
  "devDependencies": {
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.39",
    "eslint": "^8.10.0",
    "eslint-config-next": "^12.1.0",
    "lint-staged": "^12.3.5",
    "prettier": "^2.5.1",
    "simple-git-hooks": "^2.7.0",
    "typescript": "^4.6.2"
  },
  "eslintConfig": {
    "extends": "next/core-web-vitals",
    "rules": {
      "@typescript-eslint/consistent-type-imports": "error"
    },
    "plugins": [
      "@typescript-eslint"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "singleQuote": true,
    "semi": true,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.(tsx|ts|mjs)": [
      "eslint --cache --fix --cache-location .next/cache/eslint/",
      "prettier --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "npm run validate"
  }
}
